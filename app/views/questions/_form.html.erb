
<%= render('layouts/errors', object: @question)%>



<%= form_for @question do |f| %>
  <div class="control-group">
      <%= f.label :title %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
      <div class="control-group">
      <%= f.label :description %>
      <div class="controls">
        <%= f.text_area :description, cols: 40, rows: 15 %>
      </div>
      </div>
      <div class="control-group">
      <%= f.label :code %>
      <div class="controls">
        <%= f.cktext_area :code, ckeditor: { language: 'english', width: 800}%>
      </div>
      </div>
      <div class="control-group">
      <%= f.label :tag_list, "Tags (separated by commas)" %>
      <div class="controls">
        <%= f.text_field :tag_list %>
      </div>
      </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'submit', class: 'btn btn-primary'%>
      </div>
    </div>
<% end %>