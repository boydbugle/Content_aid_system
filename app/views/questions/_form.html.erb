
<%= render('layouts/errors', object: @question)%>

<%= form_for @question do |f| %>
  <div class="control-group">
      <%= f.label :title %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
      <div class="control-group">
      <%= f.label :description %>
      <div class="controls">
        <%= f.text_field :description %>
      </div>
      <div class="control-group">
      <%= f.label :code %>
      <div class="controls">
        <%= f.text_field :code %>
      </div>
      </div>
      <% @tags.each do |tag| %>
        <%= f.label :tag_id, tag.tag %>
          <%= f.check_box :tag_id %>
        <% end %>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'submit', class: 'btn btn-primary'%>
      </div>
    </div>
<% end %>