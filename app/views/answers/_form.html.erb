<%= render('layouts/errors', object: @answer)%>



<%= form_for [@question,@answer] do |f| %> 
      <div class="control-group">
        <%= f.label :description %>
      <div class="controls">
        <%= f.text_area :description, cols: 40, rows: 15 %>
      </div>
      </div>
      <div class="control-group">
        <%= f.label :code %>
      <div class="controls">
        <%= f.cktext_area :code, ckeditor: { language: 'english', width: 800}%>
      </div>
      </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'submit', class: 'btn btn-primary'%>
      </div>
    </div>
<% end %>